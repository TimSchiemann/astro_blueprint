---
const { title, url } = Astro.props;
---

<div class="card">
	<h2 class="headline h2">{title}</h2>
	<slot />
</div>
<style lang="scss">
	@use "../styles/utils" as utils;
	.card {
		border: 1px solid red;
		border-radius: 20px;
		aspect-ratio: 1/1;
		display: flex;
		flex-direction: column;
		align-items: center;
		padding: utils.rem-calc(24);
		background-size: cover;
		position: relative;
		&::before {
			content: "";
			background-color: oklch(0% 0 0 / 0.3);
			position: absolute;
			inset: 0;
			backdrop-filter: blur(100px);
			border-radius: 20px;
		}
		.headline {
			z-index: 1;
		}
	}
</style>
