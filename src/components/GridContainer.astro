---
const { title } = Astro.props;
---

<ul class="grid">
	<slot />
</ul>
<style lang="scss">
	@use "../styles/utils" as utils;
	.grid {
		display: grid;
		grid-template-columns: repeat(
			auto-fit,
			minmax(utils.rem-calc(300), 1fr)
		);
		gap: utils.rem-calc(24);
		> * {
			display: flex;
			flex-direction: column;
		}
	}
</style>
